<UserControl x:Class="KubixAdmin.CustomControls.ServiceMaterialControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KubixAdmin.CustomControls" >
    <Grid>
        <Rectangle HorizontalAlignment="Stretch" Fill="#fff" RadiusX="4" RadiusY="4">
            <Rectangle.Effect>
                <DropShadowEffect ShadowDepth="1" Direction="315" Color="#ccc"/>
            </Rectangle.Effect>
        </Rectangle>
        <DockPanel LastChildFill="False">
            <CheckBox x:Name="cbIsMaterialChecked"  Content="temp checkbox"></CheckBox>
            <TextBox  x:Name="tbMaterialPerUnit" Margin="10,0,0,0" Text="10"></TextBox>
        </DockPanel>
    </Grid>
</UserControl>
